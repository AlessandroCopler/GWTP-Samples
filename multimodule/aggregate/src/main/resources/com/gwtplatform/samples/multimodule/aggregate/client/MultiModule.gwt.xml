<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
        "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to="multimodule">
    <inherits name="com.gwtplatform.samples.multimodule.module1.Module1"/>
    <inherits name="com.gwtplatform.samples.multimodule.module2.Module2"/>

    <source path="client"/>

    <extend-configuration-property name="gin.ginjector.modules"
            value="com.gwtplatform.samples.multimodule.module1.client.gin.ClientModule"/>

    <!-- TODO: Move to processor-tools -->
    <extend-configuration-property name="gin.ginjector.modules"
            value="com.gwtplatform.common.client.GeneratedGwtpModule"/>

    <set-configuration-property name="CssResource.enableGss" value="true"/>
    <set-property name="user.agent" value="safari"/>
</module>
