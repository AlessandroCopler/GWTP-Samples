<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.gwtplatform.carstore.client.application.cars.car.widget">

    <ui:import field="com.gwtplatform.carstore.client.debug.DebugIds.*"/>

    <g:PopupPanel glassEnabled="true" autoHideEnabled="true" animationEnabled="true">
        <g:HTMLPanel>
            <div>
                <g:InlineLabel>Model:</g:InlineLabel>
                <g:TextBox ui:field="model" debugId="{CAR_MODEL_INPUT}"/>
            </div>

            <div>
                <g:InlineLabel>Manufacturer:</g:InlineLabel>
                <g:ValueListBox ui:field="manufacturer" debugId="{CAR_MANUFACTURER_INPUT}"/>
            </div>

            <div>
                <c:CarPropertiesEditor ui:field="carProperties" debugId="{CAR_PROPERTIES_EDITOR}"/>
            </div>

            <div>
                <g:Button ui:field="save" debugId="{CAR_SAVE}">Save</g:Button>
                <g:Button ui:field="close" debugId="{CAR_CLOSE}">Close</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
